<mvc:View 
        controllerName="sap.sf.ar.ui.view.Home" 
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.tnt"
        xmlns:m="sap.m">
	<m:Page backgroundDesign="List"
            id="page"
            title="{masterView>/title}"
            showNavButton="false">
        <m:customHeader>
            <m:Bar id="headerBar">
                <!--m:contentLeft>
                    <m:Button text="Collapse/Exapand"
                  icon="sap-icon://menu2"
                  press="onCollapseExapandPress" />
                </m:contentLeft-->
                <m:contentMiddle>
                    <m:Label text="{i18n>appTitle}" />
                </m:contentMiddle>
            </m:Bar>
        </m:customHeader>
        <m:content>
		    <NavigationList id="navigationList" 
		          itemSelect="onSelectItem">
	            <NavigationListItem 
	            	text="{i18n>managerApprovement}" 
	            	icon="sap-icon://payment-approval" 
	            	key="manager" class="menu">
	            </NavigationListItem>
	            <NavigationListItem 
	            	text="{i18n>oncallAllowance}" 
	            	icon="sap-icon://expense-report" 
	            	key="oncall" class="menu">
	            </NavigationListItem>
	            <NavigationListItem 
	            	visible="false"
	            	text="{i18n>atype}" 
	            	icon="sap-icon://legend" 
	            	key="atype" class="menu">
	            </NavigationListItem>
	            <!-- NavigationListItem 
	            		text="{i18n>upload}"
	            		icon="sap-icon://upload" key="upload">
	            </NavigationListItem-->
	            <NavigationListItem 
	            	visible="false"
            		text="{i18n>userTitle}"
            		icon="sap-icon://user-settings" key="user">
	            </NavigationListItem>
		    </NavigationList>
		</m:content>
		<m:footer>
			<m:Bar>
				<m:contentMiddle>
					<m:Label id="idUserName" visible="false"/>
				</m:contentMiddle>
				<m:contentRight>
					<m:Button  id="openMenu" visible="false"
					   icon="sap-icon://account" press="handlePressOpenMenu" />
				</m:contentRight>
			</m:Bar>
		</m:footer>
	</m:Page>
</mvc:View>